#:import Window kivy.core.window.Window
#:import AKSpinnerFoldingCube kivymd_extensions.akivymd.uix.spinners.AKSpinnerFoldingCube
<Prog>:
    
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'Progress'
            id:tool
            pos_hint:{'top':1}

        
        MDTabs:
            #lock_swiping:True
            id:Base
            allow_stretch:True
            on_tab_switch:root.switch(*args)

            Tab:
                title:'Today'
                ScrollView:
                    bar_width:0
                    do_scroll_y:True
                    do_scroll_x:False
                    effect_cls:'ScrollEffect'

                    GridLayout:
                        height:self.minimum_height
                        size_hint_y:None
                        padding:[0,dp(50),0,0]
                        cols:1
                        id:today
                        spacing:dp(50)
 
            
            Tab:
                title:'Week'
                ScrollView:
                    bar_width:0
                    do_scroll_y:True
                    do_scroll_x:False
                    effect_cls:'ScrollEffect'

                    GridLayout:
                        height:self.minimum_height
                        size_hint_y:None
                        padding:[0,dp(50),0,0]
                        cols:1
                        id:Week
                        spacing:dp(50)

            
            Tab:
                title:'4 weeks'
                ScrollView:
                    bar_width:0
                    do_scroll_y:True
                    do_scroll_x:False
                    effect_cls:'ScrollEffect'

                    GridLayout:
                        height:self.minimum_height
                        size_hint_y:None
                        padding:[0,dp(50),0,0]
                        cols:1
                        id:R
                        spacing:dp(50)

            
            Tab:
                title:'All time'
                ScrollView:
                    bar_width:0
                    do_scroll_y:True
                    do_scroll_x:False
                    effect_cls:'ScrollEffect'

                    GridLayout:
                        height:self.minimum_height
                        size_hint_y:None
                        padding:[0,dp(50),0,0]
                        cols:1
                        id:Al
                        spacing:dp(50)

<Card@FakeRectangularElevationBehavior+MDCard>:
    size_hint:None,None 
    size:Window.width/6,Window.height/6

    RelativeLayout:
        size_hint:None,None 
        size:root.size 

        MDSpinner:
            pos_hint:{'center_y':.5,'center_x':.5}
            size_hint:None,None 
            size:'40dp','40dp'


<CustomSpinner@FloatLayout>:
    
    AKSpinnerFoldingCube:
        angle:90
        id:spin
        color:[1,0,0,.8]
        spinner_size:dp(100)
        active:True
        pos_hint:{'center_x':.5,'center_y':.5}

    
    
    